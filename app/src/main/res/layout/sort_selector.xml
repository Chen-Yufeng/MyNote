<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <Button
        android:id="@+id/selector_byPriority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PRIORITY"/>

    <Button
        android:id="@+id/selector_byDoneFlag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DONE FLAG"/>

    <Button
        android:id="@+id/selector_bySetTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SET TIME"/>

    <Button
        android:id="@+id/selector_byDeadLineTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DEAD LINE TIME"/>

    <Button
        android:id="@+id/selector_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test"/>

</LinearLayout>